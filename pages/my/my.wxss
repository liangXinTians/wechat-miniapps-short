/* pages/my/my.wxss */
page{
    height: 100%;
}

.page-box{
    background: rgb(235, 235, 235);
    height: 100%;
}

.btn-login{
    width: 100%!important;
    padding: 0;
}

.login-info{
    display: flex;
    /* background: #fff; */
    background: #f5f5f5;
    margin: 20rpx 0rpx;
    width: 100%;
}

.login-info image{
    width: 160rpx;
    height: 160rpx;
}
.login-info .login{
    margin-left: 30rpx;
}
.login-info .login .top{
    font-size: 36rpx;
    margin-top: 30rpx;
}
.login-info .login .desc{
    font-size: 32rpx;
    color: #999;
    margin-top: 10rpx;
}

.member-box{
    background: #fff;
    margin-top: 30rpx;
}

.member-box .item{
    height: 88rpx;
    line-height: 88rpx;
    font-size: 32rpx;
    border-bottom: solid 2rpx #eee;
    padding: 0 30rpx;
}

.icon-xiangyoujiantou{
    float: right;
}