/* pages/detail/detail.wxss */
.swiper-box {
    position: relative;
}

.swiper-box swiper {
    height: 750rpx;
}

.swiper-box swiper image {
    width: 100%;
    height: 100%;
}

.swiper-box .tips {
    position: absolute;
    right: 40rpx;
    bottom: 40rpx;
    background: #333;
    opacity: 0.6;
    padding: 0 20rpx;
    border-radius: 20rpx;
}

.swiper-box .tips text {
    color: #fff;
}

.goods-info{
    padding: 30rpx;
}

.goods-info .price{
    font-size: 32rpx;
}

.goods-info .share-box{
    display: flex;
}

.icon-arrow-{
    font-size: 50rpx;
}

.goods-info .share-box .title{
    margin-top: 10rpx;
}

.goods-info .share-box .share{
    margin-top: -15rpx;
    padding: 0rpx;
    background: #fff;
    /* width: 50rpx; */
    font-weight: normal;
}

.adress{
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    background: #f5f5f5;
    font-size: 32rpx;
    padding: 0 20rpx;
}

.details-box{
    padding: 20rpx 20rpx 120rpx;
}

.details-box image{
    width: 100%;
    display: block;
}

.bottom-nav{
    display: flex;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #fff;
    width: 100%;
    align-items: center;
}

.bottom-nav .small{
    flex: 0.5;
    text-align: center;
    font-size: 28rpx;
}

.bottom-nav .add-cart{
    flex: 1;
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    background: #FFA900;
    color: #fff;
}

.bottom-nav .btn-buy{
    flex: 1;
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
    background: #FE7302;
    color: #fff;
}

.icon-ditu{
    margin-left: 10rpx;
    margin-right: 30rpx;
}